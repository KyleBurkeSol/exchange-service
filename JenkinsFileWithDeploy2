pipeline {
    agent any
    stages {
        stage('Clean') {
            steps {
                sh './gradlew clean'
            }
        }
        stage('Build') {
            steps {
                sh './gradlew assemble'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "skip tests for now because they take too long"'
            }
        }
        stage('Option Test') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
                submitter "alice,bob"
                parameters {
                    string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
                }
            }
            steps {
                echo "Hello, ${PERSON}, nice to meet you."
            }
        }
        stage('Deploy') {
            steps {
                pushToCloudFoundry cloudSpace: 'kburke_cnt', credentialsId: 'pcfLogin', organization: 'solstice-org', target: 'https://api.run.pivotal.io'
            }
        }
    }
}
